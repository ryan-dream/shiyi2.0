.shang {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.shang_img {
    width: 120rpx;
    height: 120rpx;
    margin-top: 40rpx;
}

.shang_name {
    font-size: 30rpx;
    margin-top: 20rpx;
}

.shang_text {
    width: 65%;
    text-align: center;
    font-weight: 600;
    margin: 30rpx 0;
    font-size: 40rpx;
    line-height: 60rpx;
}

.shang_tit {
    font-size: 30rpx;
    margin: 20rpx 0;
    color: #888;
}

.shang_list {
    padding: 10rpx;
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    justify-content: space-around;
    width: 100%;
    box-sizing: border-box;
}

.shang_item {
    width: 30%;
    height: 120rpx;
    line-height: 120rpx;
    text-align: center;
    border: 1rpx solid #dfb741;
    color: #dfb741;
    border-radius: 10rpx;
    font-size: 36rpx;
    margin-bottom: 20rpx;
}

.shang_more {
    font-size: 30rpx;
    color: #399ef3;
    margin-top: 10rpx;
}

.shang_num {
    position: fixed;
    bottom: 0;
    font-size: 30rpx;
    color: #888;
    height: 100rpx;
    line-height: 100rpx;
}