.Catalog::before {
    content: '';
    display: block;
    width: 100%;
    height: 10vh;
    top: 0;
    left: 0;
    z-index: -1;
}

.bg {
    position: absolute;
    width: 100%;
    height: 10vh;
    background: #07bb45;
    top: 0;
    left: 0;
    z-index: -1;
}

.Catalog .CatalogHeaer {
    margin-top: -140rpx;
}

.Min {
    box-shadow: 0 0 10px rgba(0,0,0,.05);
}

.Catalog .still .loading {
    width: 16px;
    height: 16px;
    border: 2px solid #ccc;
    border-top: 2px solid #07BB45;
    -webkit-animation: loading 0.6s infinite linear;
    display: inline-block;
    border-radius: 50%;
    vertical-align: -5px;
}

@keyframes loading {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

