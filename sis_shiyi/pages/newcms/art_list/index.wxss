page {
    font-size: 32rpx;
}

image {
    width: 100%;
    height: 100%;
}

.iconfont {
    display: inline-block;
    vertical-align: bottom;
}

.top-search-box {
    height: 108rpx;
}

.top-search {
    background: #07bb45;
    color: #fff;
    padding: 20rpx 0;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1;
}

.search-inp {
    background: #fff;
    border-radius: 10rpx;
    margin: 0 20rpx;
    padding-left: 30rpx;
    font-size: 28rpx;
    line-height: 68rpx;
    color: #666;
}

.search-inp input {
    height: 68rpx;
}

.search-btn {
    border: none;
    background: transparent;
    font-size: 38rpx;
    line-height: 68rpx;
}

.search-btn:active {
    background: #fafafa;
}

.search-btn::after {
    border: none;
}

.screen-btn {
    width: 68rpx;
    height: 68rpx;
    line-height: 68rpx;
    text-align: center;
    margin-right: 20rpx;
    transition: all 0.2s linear;
}

.screen-btn:active {
    background: rgba(255,255,255,0.2);
}

.screen-box {
    z-index: 10;
}

.screen-box .floatBoxBg {
    display: block;
    opacity: 0;
    animation: fadeIn 0.1s linear forwards;
}

.screen-cont {
    background: #fff;
    width: 70%;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
    transform: translateX(100%);
    animation: fadeInRight 0.3s 0.16s linear forwards;
}

.screen-sort {
    padding: 0 30rpx;
}

.screen-tag {
    display: inline-block;
    font-size: 28rpx;
    line-height: 1.5;
    padding: 6rpx 16rpx;
    color: #666;
    border: 1px solid #eee;
    margin-top: 16rpx;
    margin-right: 16rpx;
    border-radius: 6rpx;
    transition: all 0.1s linear;
}

.screen-tag.active {
    background: #07bb45;
    color: #fff;
    border-color: #07bb45;
}

.screen-sort.sub {
    overflow: auto;
    -webkit-overflow-scrolling: touch;
}

.screen-endbtn button {
    border-radius: 0;
    font-size: 32rpx;
    line-height: 86rpx;
}

.screen-endbtn button::after {
    border: none;
}

.screen-endbtn .reset-btn {
    color: #f66;
}

@-webkit-keyframes fadeInRight {
    0% {
        transform: translateX(100%);
    }

    100% {
        transform: translateX(0);
    }
}

@keyframes fadeInRight {
    0% {
        transform: translateX(100%);
    }

    100% {
        transform: translateX(0);
    }
}

@-webkit-keyframes fadeIn {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes fadeIn {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

