.topBox {
    width: auto;
    height: 80rpx;
    margin: 20rpx;
    color: #07bb45;
    line-height: 80rpx;
    background-color: #fff;
    border-radius: 40rpx;
    overflow: hidden;
    font-size: 32rpx;
}

.active {
    color: #fff;
    background-color: #07bb45;
}

.list {
    margin: 0 20rpx 50rpx 20rpx;
    width: auto;
    border-radius: 10rpx;
}

.item {
    padding: 30rpx;
    background-color: #fff;
}

.item:active {
    background-color: rgba(0,0,0,0.03);
}

.artPic {
    width: 200rpx;
    height: 150rpx;
    border-radius: 10rpx;
}

.itemBot {
    flex-wrap: wrap;
    line-height: 110%;
}

.itemBot .NewiconLi {
    margin-right: 70rpx;
}

.imgWh {
    position: relative;
    width: 200rpx;
    height: 150rpx;
}

.imgWh-ceng {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.4);
}

.iconfsize {
    color: #fff;
    display: inline-block;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 70rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -35rpx;
    margin-top: -35rpx;
}

.playH,.homeH {
    position: fixed;
    bottom: 30px;
    right: 20px;
    z-index: 1000;
    width: 2rem;
    height: 2rem;
    color: #fff;
    background: rgba(8,186,6,1);
    line-height: 2rem;
    text-align: center;
    border-radius: 100%;
    box-shadow: 0 0 5px rgba(12,187,8,.5);
}

.playH {
    overflow: hidden;
    line-height: 1.5rem;
}

.playH image {
    width: 45%;
    height: 45%;
}

.playH-box {
    position: relative;
    overflow: visible;
}

.line-cen {
    position: absolute;
    bottom: 24rpx;
    left: 0;
    z-index: 200;
    width: 1.6rem;
    height: 3px;
    background: rgba(8,186,6,1);
    overflow: visible;
}

.playH-box .line {
    display: inline-block;
    width: 3px;
    height: 10px;
    background-color: #fff;
    margin-right: 2px;
    overflow: hidden;
}

@keyframes line {
    from {
        height: 0;
    }

    to {
        height: 18px;
    }
}

@-webkit-keyframes line {
    from {
        height: 0;
    }

    to {
        height: 16px;
    }
}

.playH-box .line1 {
    animation: line 0.6s infinite ease-in-out alternate;
}

.playH-box .line2 {
    animation: line 0.6s 0.2s infinite ease-in-out alternate;
}

.playH-box .line3 {
    animation: line 0.6s 0.4s infinite ease-in-out alternate;
}

.playH-box .line4 {
    animation: line 0.6s 0.1s infinite ease-in-out alternate;
}

.homeH {
    background: rgba(8,186,6,1);
    box-shadow: 0 0 0px rgba(0,0,0,.5);
    bottom: 70px;
}

.iconsize {
    font-size: 20px;
}