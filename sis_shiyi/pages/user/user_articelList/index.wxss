.list {
    margin: 20rpx;
    width: auto;
    border-radius: 10rpx;
}

.item {
    position: relative;
    padding: 30rpx;
    background-color: #fff;
}

.item:active {
    background-color: rgba(0,0,0,0.03);
}

.artPic {
    width: 200rpx;
    height: 150rpx;
    border-radius: 10rpx;
}

.itemBot .NewiconLi {
    margin-right: 20rpx;
}

.edit {
    font-size: 28rpx;
    height: 48rpx;
    line-height: 48rpx;
    padding: 0 18rpx;
    color: #fff;
    background-color: #09BB07;
    border-radius: 8rpx;
}

.shade_bg {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.7);
}

.innerBox {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 80%;
    background-color: #fff;
    padding: 30rpx;
    border-radius: 10rpx;
}

.closeBtn {
    position: absolute;
    right: -15rpx;
    top: -15rpx;
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    background-color: #fff;
    box-shadow: 5rpx 5rpx 10rpx rgba(0,0,0,0.5);
}

.closeBtn::before,.closeBtn::after {
    content: '';
    position: absolute;
    width: 30rpx;
    height: 2rpx;
    background-color: #666;
    top: 19rpx;
    right: 5rpx;
}

.closeBtn::before {
    transform: rotate(45deg);
}

.closeBtn::after {
    transform: rotate(-45deg);
}

.closeBtn:active {
    opacity: 0.6;
}

.radioBox {
    padding: 10rpx;
    margin: 10rpx 0;
    word-break: break-all;
}

.radioBox2 {
    padding: 10rpx;
    margin: 10rpx 0;
    word-break: break-all;
}

.radioBox2:active {
    background: #c3fdd7;
    color: #333;
    border-radius: 12rpx;
}

.label {
    display: inline-block;
    width: 50%;
    padding: 10rpx 0;
}

.apw {
    height: 60rpx;
    line-height: 60rpx;
    width: 200rpx;
    margin-left: 10rpx;
    margin-bottom: 5rpx;
    border-radius: 40rpx;
    color: white;
    background-color: var(--color)!important;
}