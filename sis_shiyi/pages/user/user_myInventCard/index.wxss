page {
    background-color: #333;
}

.inventBtn {
    position: fixed;
    right: 0;
    top: 30rpx;
    line-height: 50rpx;
    padding: 0 15rpx;
    border-radius: 20rpx 0 0 20rpx;
    background-color: #fff;
    font-size: 22rpx;
}

.inventBtn:active {
    opacity: 0.5;
}

.inventPic {
    position: absolute;
    left: 20%;
    top: 10%;
    width: 450rpx;
    height: 750rpx;
    border-radius: 16rpx;
}

.suoPicBox {
    display: inline-block;
    position: relative;
    width: 158rpx;
    height: 188rpx;
    padding: 30rpx 15rpx;
    background-color: #fff;
}

.suoPic {
    width: 100%;
    height: 100%;
}

.scrollView {
    position: fixed;
    z-index: 10;
    bottom: 0;
    width: 100%;
    white-space: nowrap;
}

.radio {
    position: absolute;
    right: 15rpx;
    bottom: 30rpx;
    width: 45rpx;
    height: 45rpx;
    border-radius: 50%;
    background-color: #ff5050;
}

.radio::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-80%) rotate(-45deg);
    width: 16rpx;
    height: 8rpx;
    border: 4rpx solid;
    border-color: transparent transparent #fff #fff;
}